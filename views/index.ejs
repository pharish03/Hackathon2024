<!-- Script to close popup -->
<script>
    $(document).ready(function(){
        $('.close').click(function(){
            $('.popup').hide();
        });
    });

    // JavaScript to simulate typing and deleting characters
    var texts = ["easy to use budget tracker", "progressive tracking with data", "unique financing experience"];
    var counter = 0;
    var index = 0;
    var isDeleting = false;

    function type() {
        var currentText = texts[counter];
        if (isDeleting) {
            document.getElementById("dynamicText").innerHTML = currentText.substring(0, index) + '<span class="typing-cursor"></span>';
            index--;
        } else {
            document.getElementById("dynamicText").innerHTML = currentText.substring(0, index + 1) + '<span class="typing-cursor"></span>';
            index++;
        }

        if (!isDeleting && index === currentText.length) {
            isDeleting = true;
            setTimeout(type, 200);
        } else if (isDeleting && index === 0) {
            isDeleting = false;
            counter++;
            if (counter === texts.length) {
                counter = 0;
            }
            setTimeout(type, 500);
        } else {
            setTimeout(type, 100);
        }
    }

    type();
</script>

